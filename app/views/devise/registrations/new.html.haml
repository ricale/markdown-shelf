.page-header
  %h2 Join

= render partial: 'shared/message'

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
  .form-group
    = f.label :email, class: "control-label sr-only"
    .col-md-4
      = f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control"

  .form-group
    = f.label :password, class: "control-label sr-only"
    .col-md-4
      = f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control"

  .form-group
    = f.label :password_confirmation, class: "control-label sr-only"
    .col-md-4
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control"

  .form-group
    .col-md-4
      = f.submit "Join", class: "btn btn-primary"
      |
      = link_to "Login", new_user_session_path, class: "btn btn-success"
      = link_to "Home", root_path, class: "btn btn-default"
