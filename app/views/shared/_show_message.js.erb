$('.modal-message').each(function() {
  var $this = $(this)
  if($this.css('display') != 'none') {
    $this.html("<%=j render partial: 'shared/message' %>")
    setTimeout(function() {
      $this.find('.alert-custom').fadeOut(5000)
    }, 1000)
  }
})


$('#message').html("<%=j render partial: 'shared/message' %>")
setTimeout(function() {
  $('#message .alert-custom').fadeOut(5000)
}, 1000)
