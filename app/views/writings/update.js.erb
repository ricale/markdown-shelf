<% if @writing.category_id_was_changed? %>
  $('#writing_<%= @writing.id %>').remove()

  <% if @writing.category_id.nil? %>
    $('#list .category_root').append("<%=j render @writing %>")
  <% else %>
    $('#category_<%= @writing.category_id %> ul').append("<%=j render @writing %>")
  <% end%>

<% else %>
  $('#writing_<%= @writing.id %> .name').text("<%= @writing.title %>")
<% end %>

shelf.writingIsSaved();
