html, body {
  margin: 0px;
  padding: 0px;
}

.list-icon   { width: 10px; height: 10px; }
.button-icon { width: 15px; height: 15px; }

.box {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;

  display: inline-block;
  
  width: 100%;
  padding: 3px;
}

.modal-message {
  padding-bottom: 15px;
  text-align: center;
}

.header {
  margin-top: 15px;
  margin-bottom: 5px;

  .light,
  .current_writing_title,
  .current_writing_category_name {
    margin-right: 10px;
    margin-top:    0px;
    margin-bottom: 0px;
  }

  .current_writing_title {
    max-width: 75%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
  }

  .current_writing_category_name {
    max-width: 18%;
  }

  .message,
  .menu {
    margin-top: 5px;
  }
}

.menu {
  margin-top:    5px;
  margin-bottom: 5px;
}

.contents {
  .sidebar {
    height: 100%;

    .menu {
      margin-bottom: 5px;
    }
  }

  .source {
    border: 1px solid #000;
    overflow-x: hidden;
  }

  .target {
    border: 1px solid #000;
    overflow: auto;
  }

}

.contents .writing_list {
  padding: 3px;
  border: 1px solid #000;
  overflow: auto;

  .category_root_writings {
    padding-left: 0px;

    .category_writings {
      padding-left: 15px;
    }
  }

  .category_writings {
    list-style: none;
  }

  .category,
  .writing {
    padding: 2px;
  }

  .category {
    .category_info {
      display: inline-block;
      width: 100%;

      text-indent: -10px;
      padding-left: 10px;
    }

    .category_info a {
      display: none;
      text-indent:  0px;
      padding-left: 0px;
    }

    .category_info:hover a {
      display: inline;
    }
  }

  .writing {
    cursor: pointer;
    list-style: none;

    .writing_info {
      text-indent: -10px;
      padding-left: 10px;
    }

    .writing_info .remove_writing_button {
      display: none;
    }

    .writing_info:hover .remove_writing_button {
      display: inline;
    }
  }

  .writing:hover {
    background-color: #DDD;
  }

  .writing_selected {
    background-color: #FFA
  }
}
